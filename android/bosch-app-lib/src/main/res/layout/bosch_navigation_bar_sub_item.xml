<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingStart="@dimen/gu1.5"
              android:paddingEnd="@dimen/gu2">

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bosch_sub_navigationbar_background"
        android:duplicateParentState="true"
        android:gravity="center"
        android:minHeight="@dimen/gu8"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/gu0.25">

        <com.bosch.app.lib.widget.BoschImageView
            android:id="@+id/tabIcon"
            style="@style/Widget.Bosch.OptionBar.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bosch_ic_home"
            android:tint="@color/bosch_navigationbar_text"/>

        <com.bosch.app.lib.widget.BoschLabel
            android:id="@+id/tabText"
            style="@style/Widget.Bosch.OptionBar.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home tests"
            android:textColor="@color/bosch_navigationbar_text"/>

    </LinearLayout>
</LinearLayout>