<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:minWidth="@dimen/gu12"
             android:minHeight="@dimen/gu12"
             android:background="@android:color/transparent"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/squareUnder"
        android:layout_width="@dimen/gu2"
        android:layout_height="@dimen/gu2"
        android:layout_gravity="center"
        android:background="@color/boschLightGreen"/>

    <ImageView
        android:id="@+id/squareOver"
        android:layout_width="@dimen/gu2"
        android:layout_height="@dimen/gu2"
        android:layout_gravity="center"
        android:background="@color/boschDarkGreen"/>

    <ImageView
        android:id="@+id/middle"
        android:layout_width="@dimen/gu2"
        android:layout_height="@dimen/gu2"
        android:layout_gravity="center"
        android:background="@color/boschTurquoise"/>

</FrameLayout>